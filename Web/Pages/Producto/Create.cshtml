@page
@model Web.Pages.Producto.CreateModel
@{
	ViewData["Title"] = "Creación de Nuevo Producto";
}

<div class="card">
	<div class="card-header">
		<div class="col-sm-6">
			<h2 class="text-info">Creación de Nuevo Producto</h2>
		</div>
	</div>
	<div class="card-footer">
		<div class="container">
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Producto.Codigo"></label>
					</div>
					<div class="col-sm-6">
						<input asp-for="Producto.Codigo" class="form-control" />
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Producto.Descripcion"></label>
					</div>
					<div class="col-sm-6">
						<input asp-for="Producto.Descripcion" class="form-control" />
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-2 offset-sm-2">
						<input type="submit" value="Crear" class="btn btn-primary form-control" />
					</div>
					<div class="col-sm-6">
						<a asp-page="List" class="btn btn-success form-control">Volver a la Lista de Productos</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
